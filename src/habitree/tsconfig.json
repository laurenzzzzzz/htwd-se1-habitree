{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", 
    "src", 
    "src/types"
  ]
}